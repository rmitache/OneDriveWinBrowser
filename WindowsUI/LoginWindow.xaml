<Window x:Class="WindowsUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsUI"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="300" FontSize="14" Background="LightGray">
    <StackPanel Margin="20">
        <Label Content="Please enter your OneDrive credentials"></Label>
        <Separator></Separator>
        
        <!--Email-->
        <Label Content="Email" Margin="0 15 0 0" FontWeight="Bold"></Label>
        <TextBox Name="EmailTextBox" ></TextBox>
        
        <!--Password-->
        <Label Content="Password" Margin="0 15 0 0" FontWeight="Bold"></Label>
        <PasswordBox Name="PasswordTextBox" ></PasswordBox>

        <!--Login button-->
        <Button Click="LoginButton_Click" Width="80" Name="LoginButton" Content="Log-in" HorizontalAlignment="Right" Margin="0 80 0 0"></Button>
    </StackPanel>
</Window>
